{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./lib",
    "rootDir": "./",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "types": ["node", "jest"],
    "noEmit": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "**/*.test.ts"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}
