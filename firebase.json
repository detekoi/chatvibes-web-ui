{
  "firestore": {
    "rules": "firestore.rules"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local",
        "src/**/*.ts",
        "index.ts",
        "**/*.test.ts",
        "**/__tests__/**",
        "tsconfig.json",
        "jest.config.js",
        "coverage"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "hosting": {
    "public": "public",
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log",
      "*.local",
      ".env"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "webUi"
      },
      {
        "source": "/auth/**",
        "function": "webUi"
      },
      {
        "source": "/s/**",
        "function": "webUi"
      }
    ]
  }
}
